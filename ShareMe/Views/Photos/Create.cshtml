@model ShareMe.ViewModels.PhotoViewModels.PhotoFormViewModel

@{
	ViewData["Title"] = "Create";
}

<h2>Create</h2>
<div class="row">
	<form asp-controller="Photos" asp-action="Create" asp-area="" method="post" class="col-md-6">
		@Html.AntiForgeryToken()
		<p class="alert alert-info">All fields are <strong>required</strong>.</p>
		<div class="form-group">
			<label asp-for="Url"></label>
			@Html.TextBoxFor(m => m.Url, new { @class = "form-control", placeholder = "https://google.com" })
			@Html.ValidationMessageFor(m => m.Url)
		</div>
		<div class="form-group">
			<label asp-for="Description"></label>
			@Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "My beautiful photo" })
			@Html.ValidationMessageFor(m => m.Description)
		</div>
		<div class="form-group">
			<label asp-for="Tags"></label>
			@Html.TextBoxFor(m => m.Tags, new { @class = "form-control", placeholder = "My beautiful photo" })
			@Html.ValidationMessageFor(m => m.Tags)
		</div>
		<button type="submit" class="btn btn-primary">Save</button>
	</form>
</div>

